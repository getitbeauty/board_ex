<div class = "container">
  <h1> 수정 페이지입니다 </h1>

  <form action="/update/<%= @one_post.id%>" method="post">
      <div class="form-group">
        <label for="a">제목</label>
        <input type="text" class="form-control" name="input_title" id="a" value="<%= @one_post.title %>">
      </div>
      <div class="form-group">
        <label for="b">내용</label>
        <textarea class="form-control" name="input_content" id="b" rows="20" value="<%= @one_post.content %>"></textarea>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>